@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class="col-sm-2">
            Neighborhood
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
        <dd class="col-sm-10">
            <img class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th>
                    Client
                </th>
                <th>
                    Duration
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{ int total = 0;}
            @foreach (Walk walk in Model.Walks)
            {
                total = total + walk.Duration;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => walk.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => walk.owner.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => (walk.Duration)) mins
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <th>Total Walk Time:</th>
        @Html.DisplayFor(modelItem => total) mins
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
